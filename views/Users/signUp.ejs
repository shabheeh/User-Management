<%- include('../layouts/header') %>
<body>
  <div class="container">
      <div class="content">
          <div class="user singupBox">
              <div class="formBx">
                <form action="/signup" class="form form-container" method="post">
                  <h4 class="form--title">Create Account</h4>
                  <div class="form-field">
                    <label for="username">Username</label>
                    <input type="text" name="username" value="<%= formData ? formData.username : '' %>"  >
                    <p><%= signupMessagename ? signupMessagename : '' %></p>
                  </div>
                  <div class="form-field">
                    <label for="email">Email</label>
                    <input type="text" name="email" id="emailInput"  class="form-control" value="<%= formData ? formData.email : '' %>" >
                    <p><%= signupMessagemail ? signupMessagemail : '' %></p>
                </div>
                
                  <div class="form-field"> 
                    <label for="mobile">Mobile</label>
                    <input type="text" name="mobile" class="form-control" 
                    value="<%= formData ? formData.mobile : '' %>" >
                    <p><%= signupMessagemob ? signupMessagemob : '' %></p>
                  </div>
                  <div class="form-field">
                    <label for="password">Password</label>
                    <input type="password"name="password" >
                    <p><%= signupMessagepass ? signupMessagepass : '' %></p>
                  </div>
                  <div class="form-action">
                    <!-- <a href="#">Forgot password?</a> -->
                    <button class="btn btn-primary"  type="submit">Sign Up</button>
                  </div>
                  <p class="footer-p"  > Already have account <a href="signin">Sign in</a></p>
                  <%
                  if(typeof signupMessage != 'undefined'){
                    %>
                    <p class="success"><%= signupMessage %></p>
                    <%
                  }
                %>
                </form>
              </div>
              
            </div>
      </div>
    </div>

